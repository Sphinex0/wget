                    <mtr>
                      <mtd>
                        <mo>−<!-- − --></mo>
                        <mn>8</mn>
                      </mtd>
                      <mtd>
                        <mo>−<!-- − --></mo>
                        <mn>3</mn>
                      </mtd>
                    </mtr>
                  </mtable>
