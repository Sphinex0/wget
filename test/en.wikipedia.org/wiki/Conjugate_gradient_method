        <mi>k</mi>
        <mo stretchy="false">(</mo>
        <mi>x</mi>
        <mo>,</mo>
        <mi>v</mi>
        <mo stretchy="false">)</mo>
        <mo>:=</mo>
        <mo>−<!-- − --></mo>
        <msub>
          <mi>γ<!-- γ --></mi>
