            <mi mathvariant="normal">V</mi>
          </mrow>
        </mrow>
        <mo>=</mo>
        <mrow class="MJX-TeXAtom-ORD">
          <mfrac>
            <mrow>
              <mi mathvariant="normal">$<!-- $ --></mi>
              <mn>100</mn>
            </mrow>
            <mrow>
              <mo stretchy="false">(</mo>
              <mn>1</mn>
              <mo>+</mo>
              <mn>0.12</mn>
              <msup>
                <mo stretchy="false">)</mo>
