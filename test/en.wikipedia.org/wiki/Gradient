            <mi>j</mi>
            <mi>k</mi>
          </mrow>
        </msup>
        <mrow>
          <mo>(</mo>
          <mrow>
            <mrow class="MJX-TeXAtom-ORD">
              <mfrac>
                <mrow>
                  <mi mathvariant="normal">∂<!-- ∂ --></mi>
                  <msup>
                    <mi>f</mi>
